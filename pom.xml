    <name>trasier-client</name>

    <description>Java library to injest traceable data into Trasier systems.</description>
    <url>https://github.com/trasiercom/trasier-client</url>
    <inceptionYear>2018</inceptionYear>

    <licenses>
        <license>
            <name>Apache License Version 2.0</name>
